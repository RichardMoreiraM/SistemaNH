@model SistemaNH.Models.ViewModel.ActualizarUsuario;
@{
    var action = "Ingresar";
    var id = "";
    if (ViewData["id"] != null)
    {
        action = "Actualizar";
        id = ViewData["id"].ToString();
    }
    ViewBag.Title = action + " Usuario";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" method="post">
                    <fieldset>
                        <legend class="text-center header">Registro de Usuario</legend>

                        @if (action.Equals("Ingresar"))
                            {
                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-address-card bigicon"></i></span>
                                <div class="col-md-8">
                                   <p>Id Usuario</p>
                                   <input asp-for="Id" id="fname" name="name" type="text" placeholder="Id de Usuario" class="form-control" autocomplete="new-password">
                                   <span asp-validation-for="Id" class="text-danger"></span>
                                </div>
                            </div>
                            }

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-asterisk bigicon"></i></span>
                            <div class="col-md-8">
                                <p>Contrase&ntilde;a</p>
                                <input asp-for="Clave" type="password" placeholder="Contrase&ntilde;a" class="form-control" autocomplete="new-password">
                                 <span asp-validation-for="Clave" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-asterisk bigicon"></i></span>
                            <div class="col-md-8">
                                <p>Confirmar Contrase&ntilde;a</p>
                                <input asp-for="ConfirmClave" type="password" placeholder="Confirmar Contrase&ntilde;a" class="form-control">
                                 <span asp-validation-for="ConfirmClave" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-calendar bigicon"></i></span>
                            <div class="col-md-8">
                                <p>Fecha Expiraci&oacute;n</p>
                                <input asp-for="FechaExpiracion" type="date" placeholder="Fecha" class="form-control" >
                                 <span asp-validation-for="FechaExpiracion" class="text-danger"></span>
                            </div>
                        </div>

                         <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user-circle-o bigicon"></i></span>
                                <div class="col-md-8">
                                   <p>Nombre Completo</p>
                                   <input asp-for="Nombres" type="text" placeholder="Nombre Completo" class="form-control" >
                                   <span asp-validation-for="Nombres" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-suitcase bigicon"></i></span>
                                <div class="col-md-8">
                                   <p>Jornada</p>
                                   <input asp-for="IdJornada" type="hidden" id="jornada" />
                                   <div class="input-group">
                                     <input id="jornada-nombre" type="text" placeholder="Seleccionar" aria-label="Seleccionar" aria-describedby="basic-addon2" class="form-control" disabled="disabled">
                                      <div class="input-group-append" id="admin" style="cursor: pointer">
                                          <span class="input-group-text" id="basic-addon2">+</span>
                                     </div>
                                    </div>
                                    <span asp-validation-for="IdJornada" class="text-danger"></span>
                                </div>
                            </div>

                        @if (action.Equals("Actualizar"))
                            {
                                <div class="form-group">
                                    <p>Roles</p>
                                    <a class="btn btn-info" href="/Usuario/RolesUsuario/@id">Modificar</a>
                                </div>
                            }
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>